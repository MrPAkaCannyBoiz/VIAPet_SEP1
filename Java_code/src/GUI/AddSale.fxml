<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.AddSaleController">
   <children>
      <Text layoutX="262.0" layoutY="33.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Add Sale" textAlignment="CENTER">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </Text>
      <VBox alignment="CENTER" layoutX="14.0" layoutY="52.0" prefHeight="296.0" prefWidth="302.0">
         <children>
            <AnchorPane prefHeight="46.0" prefWidth="284.0">
               <children>
                  <Text layoutX="36.0" layoutY="28.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Customer" />
                  <ComboBox fx:id="customerListComboBox" layoutX="134.0" layoutY="9.0" onShown="#initializeForCustomerList" prefHeight="26.0" prefWidth="167.0" promptText="Select" />
               </children>
            </AnchorPane>
            <AnchorPane prefHeight="46.0" prefWidth="302.0">
               <children>
                  <Text layoutX="54.0" layoutY="28.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Pet" />
                  <ComboBox fx:id="petListComboBox" layoutX="135.0" layoutY="9.0" onShown="#initializeForPetList" prefHeight="26.0" prefWidth="167.0" promptText="Select" />
               </children>
            </AnchorPane>
            <AnchorPane prefHeight="46.0" prefWidth="270.0">
               <children>
                  <Text layoutX="33.0" layoutY="27.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Final price" />
                  <TextField fx:id="petFinalPriceTextField" layoutX="134.0" layoutY="9.0" prefHeight="26.0" prefWidth="167.0" />
               </children>
            </AnchorPane>
            <AnchorPane prefHeight="74.0" prefWidth="230.0">
               <children>
                  <Text layoutX="27.0" layoutY="28.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Date of sale" />
                  <DatePicker fx:id="datePicker" layoutX="135.0" layoutY="10.0" prefHeight="26.0" prefWidth="167.0" />
                  <Text layoutX="27.0" layoutY="56.0" strokeType="OUTSIDE" strokeWidth="0.0" text="** Leave empty if it is current date" />
               </children>
            </AnchorPane>
         </children>
      </VBox>
      <Button fx:id="saveAddSaleButton" layoutX="433.0" layoutY="226.0" mnemonicParsing="false" onAction="#handleSaveAddSale" text="Add" />
      <Button fx:id="backAddSaleButton" layoutX="432.0" layoutY="295.0" mnemonicParsing="false" onAction="#handleBackAddSale" text="Back" />
   </children>
</AnchorPane>
