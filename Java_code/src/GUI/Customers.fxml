<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.CustomerController">
    <children>
        <Pane prefHeight="400.0" prefWidth="600.0">
            <children>
                <Label layoutX="286.0" layoutY="25.0" text="Customers">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font></Label>
                <Button fx:id="addCustomerButton" layoutX="443.0" layoutY="64.0" mnemonicParsing="false" onAction="#handleClickAddCustomer" text="Add Customer" />
                <Button fx:id="editCustomerButton" layoutX="444.0" layoutY="152.0" mnemonicParsing="false" onAction="#handleClickEditCustomer" text="Edit Customer" />
                <Button fx:id="backCustomerButton" layoutX="483.0" layoutY="355.0" mnemonicParsing="false" onAction="#handleBackCustomer" text="Back" />
            <TableView fx:id="customerTableView" layoutX="27.0" layoutY="49.0" prefHeight="331.0" prefWidth="406.0">
              <columns>
                <TableColumn fx:id="nameColumn" prefWidth="132.5" text="name" />
                <TableColumn fx:id="emailColumn" prefWidth="127.0" text="email" />
                  <TableColumn fx:id="phoneNoColumn" prefWidth="145.5" text="phoneNo" />
              </columns>
            </TableView>
            </children>
        </Pane>
    </children>
</AnchorPane>
